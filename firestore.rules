rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regra para a coleção 'users'
    // Permite leitura e escrita apenas se o UID do usuário autenticado
    // corresponder ao ID do documento.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regra para a coleção 'programs'
    // Permite leitura e escrita para usuários autenticados (Admin simplificado)
    match /programs/{programId} {
      allow read, write: if request.auth != null;
    }

    // Bloqueia acesso a qualquer outra coleção por padrão
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
